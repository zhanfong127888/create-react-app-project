<wxs src="../../util.wxs" module="util" />
<import src="../parse_common/index.wxml" />
<import src="../../templates/inner_templates.wxml" />

<template name="hf-content">
  <block wx:if="{{util.isString(item)}}">
    <text>{{item}}</text>
  </block>

  <block wx:elif="{{util.isObject(item)}}">
    <template is="tik" data="{{item}}" />
  </block>
</template>

<!-- 这个key要小心 -->
<view class="hfooter {{item.footerClass||''}}">
  <block wx:for="{{item.footer}}" wx:key="__key" wx:for-item="son">
    <block wx:if="{{util.isString(son)}}">
      <view class="hf-item">
        <text>{{son}}</text>
      </view>
    </block>
    <block wx:else>
      <template is="@item" data="{{ props: {...son, treeid: util.treeid(item), itemClass: son.itemClass ?  'hf-item ' + son.itemClass : 'hf-item'} }}" />
    </block>
  </block>
