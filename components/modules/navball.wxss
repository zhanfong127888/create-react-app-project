.nav-ball-handle {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  position: fixed;
  right: 30px;
  top: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 900;
  box-sizing: border-box;
  background: rgba(245, 245, 245, 0.7);
  box-shadow: 0 0 50px rgba(0, 0, 0, 0.5) inset;
  /* box-shadow: 1px 1px 10px 1px #000; */
  transition: all 0.2 ease;
}

.nav-ball-handle .hdot-item {
  position: absolute;
  width: 70%;
  height: 70%;
  border-radius: 50%;
  left: 0;
  top: 0;
  margin: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-weight: 700;
  color: red;
  /* transform: translate3d(-50%, -50%, 0); */
  /* box-shadow: 1px 1px 3px 1px #aaa; */
  background-image: linear-gradient(#e8e8e8 0%, #bababa 100%);
  text-shadow: 1px 1px 1px rgba(255, 255, 255, 0.66);
  /* box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5) inset, 0 1px 1px rgba(0, 0, 0, 0.19); */
  box-shadow: 1px 1px 1px rgba(194, 191, 191, 0.19);
  /* border-bottom: solid 1px #b5b5b5; */
  /* opacity: 0.8; */
}



