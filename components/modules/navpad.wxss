.navpad {
  width: 100vw;
  height: var(--navpad-height);
  top: calc(var(--navpad-top) - env(safe-area-inset-bottom));
  /* top: var(--navpad-top); */
  position: fixed;
  left: 0;
  z-index: 400;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  background-color: #dfdfdf;
  box-sizing: border-box;
  padding-top: 60rpx;
  padding: 0 10px 10px 10px;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
}

