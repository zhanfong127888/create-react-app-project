.tab-content {
  width: calc(100vw - 100px);
  height: 100%;
  box-sizing: border-box;
  padding: 10px;
  padding-top: 0;
  display: flex;
  flex-direction: column;
}

.tab-content swiper.hlist {
  width: 100%;
  height: 100vh;
}

.tab-content swiper.hlist .swiper-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  justify-content: flex-start;
  align-items: flex-start;
  /* overflow: auto; */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

