.tab-boxer {
  width: 100vw;
  height: 100vh;
  display: flex;
  box-sizing: border-box;
  position: relative;
}

.tab-header {
  width: 100px;
  border-right: 1px solid #ccc;
}

.tab-item {
  width: 100%;
  height: 46px;
  line-height: 46px;
  text-align: center;
  display: block;
  transition: all ease .2s;
  position: relative;
  color: #999;
}

.tab-item.active {
  color: #000;
  font-weight: 700;
}

