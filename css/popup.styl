.toast-body
  background: #fff
  border-radius: 20rpx
  padding: 20rpx
  text-align: center

.pop-body
  background: #fff
  border-radius: 10rpx
  font-size: 28rpx
  .item-header
    background: #ececec
    height: 100rpx
    color: #666
    text-align: center
  .item-footer
    background: #c10000
    color: #fff
    font-weight: bold

.custom-closeIt
  position: absolute
  bottom: 90rpx
  width: 98rpx;
  height: @width
  line-height: @width
  left: calc(50% - 50rpx); //49 + 3
  font-size: 50rpx;
  color: #E5E5E5
  border: 5rpx solid #E5E5E5 
  border-radius: 100%
  text-align: center
  &:before
    content: '\e606'