.popups-wrap-trans
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  ss-display-flex(column, center, center)
  // z-index: -1
  // &.active
  //   z-index: 9999

.popups-wrap-input
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
