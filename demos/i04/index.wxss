@import "../common/common.wxss";

.sitem{
  width: 75vw;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sitem.cat{
  border: 1px solid #e2e2e2;
  border-radius: 3px;
}

.sitem.cat>.htitle,
.sitem.cat>.htitles {
  display: flex;
  box-sizing: border-box;
  padding: 5px;
  padding-left: 10px;
  width: 100%;
  height: 60px;
  align-items: center;
  border-bottom: 1px solid #e2e2e2;
  flex: 0 0 auto;
}

.sitem.cat>.htitles {
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.sitem.cat>.htitles .t-item:first-child {
  font-size: 16px;
}
.sitem.cat>.htitles .t-item:nth-child(2) {
  font-size: 12px;
  color: #999;
}

.sitem.cat>.ul, .sitem.cat>image {
  flex: 2;
}

.sitem.cat>.ul{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

