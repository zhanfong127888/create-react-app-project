@import "../common/common.wxss";

page{
  background-color: #efefef;
}

.container{
  padding: 0;
  flex-direction: row;
}

.menus{
  flex: 0 0 auto;
  width: 100px;
  height: 100vh;
  /* border-right: 1px solid #f6f6f6; */
}

.content{
  flex: 2;
  height: 100vh;
}

.menus .demo-scroll-list {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
}

.menus .demo-scroll-list-item {
  flex: 0 0 auto;
  width: auto;
  box-sizing: border-box;
  padding: 3px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: #fff; */
  position: relative;
}

.menus .demo-scroll-list-item.active {
  color: #ff3c00;
  /* background-color: transparent; */
  background-color: #fff;
}

.menus .demo-scroll-list-item.active::before {
  content: '';
  padding: 1px;
  background-color: #ff0800;
  /* box-shadow: 0 0 5px #ff0800; */
  position: absolute;
  left: 0;
  height: 20px;
}


.board-list{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.board-list > ui-item{
  width: 100%;
  height: 100%;
}

.board-list .board-item-sub{
  width: 100%;
  min-height: 70vh;
  flex: 0 0 auto;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.board-list .board-item-sub > .htitle{
  display: block;
  font-size: 18px;
  font-weight: 500;
}