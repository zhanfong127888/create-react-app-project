.lockerBoxer {
  position: relative;
  width: 300px;
  height: 300px;
}

.canvasLocker {
  /* background-color: yellow; */
  /* width: 300px;
  height: 300px; */
  width: 100%;
  height: 100%;
}

.gestureLocker{
  /* width: 300px;
  height: 300px; */
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  position: absolute;
  left: 0;
  top: 0;
}

.gestureLocker .lock-item{
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: #ccc;
  color: #ccc;
  opacity: .2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10px;
  position: relative;
}

.gestureLocker .lock-item.active:after{
  display: block;
  position: absolute;
  left: calc(50%-17.5px);
  top: calc(50%-17.5px);
  content: '';
  width: 35px;
  height: 35px;
  border-radius: 50%;
  background-color: red;
}