.search-pop {
  display: none;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background-color: #fdfdfd;
  z-index: 700;
  box-sizing: border-box;
  padding: 10px;
  padding-top: 60px;
}

.search-pop.active {
  display: flex;
  flex-direction: column;
}

.search-bar .input-item-area {
  width: 100vw;
  /* height: 50px; */
  padding: 10px;
  padding-top: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search-bar .input-item-area .search-text {
  flex: 2;
  width: 100%;
  height: 30px;
  border: 1px solid #dfdfdf;
  border-radius: 10px;
  padding-left: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 702;
}
.search-bar .input-item-area .search-text input{
  flex: 1;
}
.search-bar .input-item-area .search-text.active {
  padding-left: 10px;
  justify-content: flex-start;
}
.search-bar .input-item-area .search-text.active .input-item-passwd-eye {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-bar .input-item-area .search-text.active .input-type-text {
  width: 100%;
}
.search-bar .input-item-area .search-text.active .search-clean {
  flex: 0 0 auto;
  margin-top: -2px;
  width: 34px;
  height: 24px;
  display: block;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-bar .input-item-area .search-text.active .search-clean:after {
  content: 'âŠ—';
  font-size: 22px;
  display: block;
}
.search-bar .input-item-area .search-cancel {
  flex: 1;
  display: none;
  position: relative;
  margin-left: 5px;
  z-index: 702;
}
.search-bar .input-item-area .search-cancel.active {
  display: block;
}