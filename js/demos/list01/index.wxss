@import "../common/common.wxss";

page{
  background-color: #eee;
}

.container{
  padding: 30px 0;
}

.cat {
  border: none;
  background-color: transparent;
  box-sizing: border-box;
  padding-left: 15px;
  margin-bottom: 2px;
  margin-top: -12px;
  font-size: 14px;
  color: #999;
}

.demo-list{
  width: 100vw;
  height: auto;
  box-sizing: border-box;
  padding: 0 0 0 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #dfdfdf;
  margin-bottom: 30px;
  background-color: #fff;
}

.demo-list-item{
  width: 100%;
  height: 40px;
  box-sizing: border-box;
  padding: 5px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #dfdfdf;
}

.demo-list-item:last-child{
  border-bottom: none;
}

.demo-list-item::after {
  content: '';
  display: block;
  padding: 4px;
  border-width: 0 1px 1px 0;
  transform: rotate(-45deg);
  border-color: #999;
  border-style: solid;
  margin-right: 15px;
}

.demo-list-item.noevent::after {
  border: none;
  padding: 0;
  margin: 0;
}

.demo-list-item .htitles {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.demo-list-item .htitles .t-item:last-child {
  margin-right: 10px;
}