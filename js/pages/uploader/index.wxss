@import "../common/source.wxss";

ui-list {
  width: 100%;
}

.container {
  padding: 30rpx;
  align-items: flex-start;
}

.uploader{
  display: flex;
  width: 100%;
  margin-bottom: 2em;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.uploader.column {
  flex-flow: column;
  align-items: space-around;
  justify-content: center;
}

.uploader.column .uploader-item {
  width: auto;
  height: 200px;
  margin-bottom: 30px;
  margin-left: 0
}

.uploader.friends {
  justify-content: flex-start;
}

.uploader.friends .uploader-item{
  margin-right: 10px;
  margin-bottom: 16px;
}

.uploader-item {
  flex: 0 0 auto;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #e5e6e7;
  color: #999;
  font-size: 40px;
  position: relative;
  margin-left: 10rpx;
}

.uploader-item>image {
  width: 100%;
  height: 100%;
}

.uploader-delete-item-button {
  position: absolute;
  top: -8px;
  right: -8px;
  color: #c1c1c1;
  border: 1px solid;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  font-size: 14px;
}