.tab-content {
  /* width: 100%; */
  /* height: calc(100vh - 57px); */
  width: calc(100vw - 100px);
  height: 100%;
  box-sizing: border-box;
  padding: 10px;
  padding-top: 0;
  display: flex;
  flex-direction: column;
}

.tab-content swiper.hlist {
  width: 100%;
  height: 100vh;
}

.tab-content swiper.hlist .swiper-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  justify-content: flex-start;
  align-items: flex-start;
  /* overflow: auto; */
}

.item-one{
  width: calc(100vw - 120px);
  height: 100vh;
  white-space: normal;
}
.item-one-item{
  width: calc((100vw - 120px)/3);
  height: calc((100vw - 120px)/3);
  display: inline-block;
  box-sizing: border-box;
  padding: 4px;
  text-align: center;
}
.item-one-item text{
  display: block;
}

.item-one-item:first-child{
  width: 100%;
  display: block;
  padding: 0;
  margin-bottom: 10px;
}
.item-one-item:first-child image{
  height: calc((100vw - 120px)/3);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

